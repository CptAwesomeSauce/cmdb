{{>header.hbs}}
<h2>Moderator Home</h2>


<form action="/mod/review-check" method="get">

    <p><button type="submit">View Unapproved Reviews</button></p>
</form>



<form action="/deauthenticate" method="post">

    <p><button type="submit">Log out</button></p>
</form>

<form action="/movie-list" method="get">

    <p>Search for a movie:</p>
    <label for="title">Title:</label>
    <input type="text" id ="title" name="title_field"> <br>
    <p><button type="submit">Search</button></p>
</form>

<form action="/movie-by-genre" method="get">
    <p>Genre:
        <input type="radio" name="genre_field" value="horror"> Horror
        <input type="radio" name="genre_field" value="comedy"> Comedy
        <input type="radio" name="genre_field" value="romance"> Romance
        <input type="radio" name="genre_field" value="action"> Action
        <input type="radio" name="genre_field" value="other"> Other

    </p>

    <p><button type="submit">Search</button></p>

</form>

<form action="/viewReviews" method="get">

    <p><button type="submit">View All Reviews</button></p>

</form>

<form action="/mod/freezeUser" method = "get">

    <p><button type="submit">Freeze a user</button></p>
</form>

